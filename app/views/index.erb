  <!-- Intro Header -->
  <header class="intro">
      <div class="intro-body">
          <div class="container">
              <div class="row">
                  <div class="col-md-8 col-md-offset-2">
                      <h1 class="brand-heading">NY Freegan Forum</h1>
                      <p class="intro-text">Connecting Freegans in New York City</p>
                      <!-- Single button -->
                      <div class="row">
                        <div class="btn-group">
                          <button type="button" class="btn btn-default btn-lg dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            View Reports <span class="caret"></span>
                          </button>
